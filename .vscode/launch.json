{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "args": [
                "${workspaceFolder}/src/shared/http/server.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/dist/**/*.js",
            "protocol": "inspector"
        }
    ]
}
